<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.alljoyn.triumph.controller.MainController">
  <!-- TODO Add Nodes -->
  <center>
    <TabPane id="bustabs" prefHeight="200.0" prefWidth="200.0" rotateGraphic="false" side="TOP" tabClosingPolicy="SELECTED_TAB">
      <tabs>
        <Tab id="tab_distributed" closable="false" content="$null" text="Distributed Bus" />
        <Tab id="tab_session" closable="false" content="$null" text="Local DBus" />
      </tabs>
    </TabPane>
  </center>
  <top>
    <VBox prefHeight="80.0" prefWidth="100.0">
      <children>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" text="Close" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem mnemonicParsing="false" text="Delete" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="About" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
          <children>
            <Label text="Triumph" textFill="BLACK" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
              <font>
                <Font size="20.0" />
              </font>
            </Label>
            <Button fx:id="refresh" layoutY="18.0" mnemonicParsing="false" onAction="#refreshButtonClicked" text="Refresh" textAlignment="RIGHT" AnchorPane.rightAnchor="10.0" />
          </children>
        </AnchorPane>
      </children>
    </VBox>
  </top>
</BorderPane>
