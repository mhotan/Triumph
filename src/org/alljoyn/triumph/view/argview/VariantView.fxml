<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
  <children>
    <BorderPane layoutX="0.0" layoutY="0.0" prefHeight="-1.0" prefWidth="-1.0">
      <bottom>
        <ComboBox fx:id="mSelection" prefWidth="139.0">
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="Item 1" />
              <String fx:value="Item 2" />
              <String fx:value="Item 3" />
            </FXCollections>
          </items>
          <BorderPane.margin>
            <Insets left="3.0" right="3.0" />
          </BorderPane.margin>
        </ComboBox>
      </bottom>
      <center>
        <Pane fx:id="mPayload" prefHeight="-1.0" prefWidth="-1.0" />
      </center>
      <top>
        <HBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
          <children>
            <Label prefHeight="27.0" text="Label" HBox.hgrow="ALWAYS">
              <HBox.margin>
                <Insets left="3.0" />
              </HBox.margin>
            </Label>
            <Button mnemonicParsing="false" text="Save" HBox.hgrow="NEVER">
              <HBox.margin>
                <Insets bottom="3.0" top="3.0" />
              </HBox.margin>
            </Button>
            <Label prefHeight="27.0" text="Error" textFill="RED">
              <HBox.margin>
                <Insets right="3.0" />
              </HBox.margin>
            </Label>
          </children>
        </HBox>
      </top>
    </BorderPane>
  </children>
</fx:root>
